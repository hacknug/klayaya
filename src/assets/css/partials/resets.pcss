* {
  outline: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  word-break: break-all;
  word-break: break-word;
  hyphens: auto;
}

a {
  color: inherit;
  text-decoration: none;
}

small,
input,
textarea,
select,
button {
  padding: 0;
  color: inherit;
  background-color: transparent;
  font: inherit;
  text-align: inherit;
  text-transform: inherit;
  letter-spacing: inherit;
}

h1,
h2,
h3,
h4,
h5,
h6,
small {
  font: inherit;
}
